<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_header_row_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:orientation="horizontal"
    android:paddingBottom="6dip"
    android:paddingTop="4dip" >
    <TextView
        android:id="@+id/_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left"
        android:paddingRight="2dip"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" >
    </TextView>
    <TextView
        android:id="@+id/_identificationNo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left"
        android:paddingRight="2dip"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" >
    </TextView>
    
    
    <TextView
        android:id="@+id/stopInformation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left"
        android:paddingRight="2dip"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible" >
    </TextView>

    <TextView
        android:id="@+id/invoiced"
        style="@style/ImageMenu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:text="I"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:visibility="gone"
        android:contentDescription="Invoiced"
        android:onClick="ClickHandler" />
    
    <TextView
        android:id="@+id/accepted"
        style="@style/ImageMenu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toLeftOf="@+id/invoiced"
        android:text="A"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/skyblue"
        android:contentDescription="Accepted"
        android:visibility="gone"
        android:onClick="ClickHandler" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fullname"
        android:gravity="left"
        android:paddingRight="2dip"
        android:text="@string/messages"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:textStyle="normal"
        android:visibility="visible" >
    </TextView>
    <CheckBox
        android:id="@+id/membercheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:button="@drawable/checkboxselector"
        android:checked="true"
        android:clickable="true"
        android:focusable="true"
        android:paddingBottom="2dip"
        android:paddingRight="2dip"
        android:text=""
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:onClick="ClickHandler"
        android:visibility="gone" />
    <Button
        android:id="@+id/signedReceiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="SR"
        android:textColor="@color/blue"
        android:textSize="14sp"        
        android:background="@color/snow" />
    
</RelativeLayout>