<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content">

	<TextView android:id="@+id/spinnerTarget"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:textColor="@color/blue" android:textSize="@dimen/text_size" />
	<TextView android:id="@+id/spinnerId" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textColor="@color/blue"
		android:textSize="@dimen/text_size" android:visibility="gone" />
	<TextView android:id="@+id/spinnerNo" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textColor="@color/blue"
		android:textSize="@dimen/text_size" android:visibility="gone" />

</LinearLayout>